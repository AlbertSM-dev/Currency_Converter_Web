@model RootObject.Models.RootObject

@{
    ViewData["Title"] = "Index";
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Currency Converter</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template -->
    <link href="css/landing-page.min.css" rel="stylesheet">

</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-light bg-dark static-top">
        <div class="container">
            <a class="navbar-light" href="#">Currency Converter</a>
            <a href='//www.microsoft.com/store/apps/9nn9r7fjmz5l?cid=storebadge&ocid=badge' target="_blank"><img src='https://developer.microsoft.com/store/badges/images/English_get_L.png' alt='English badge' style='width: 127px; height: 52px;' /></a>
        </div>
    </nav>

    <!-- Masthead -->
    <header class="masthead text-white text-center">
        <div class="overlay"></div>
        <div class="container">
            <div class="row bg-dark" style="height:50%;background-color:darkblue;padding:1%;">
                <div class="col-xl-9 mx-auto">
                    <h1 class="mb-5">ECB Currency Converter</h1>
                </div>
                <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
                    <form method="post">
                        <div class="form-row">
                            <div class="col-12 col-md-4 mb-2 mb-md-0">
                                <input name="Quantity" type="number" class="form-control form-control-lg" style="height:51px;" value="@Model.Quantity">
                            </div>
                            <div class="col-12 col-md-4 mb-1 mb-md-0">
                                <select class="form-control form-control-lg selectpicker">
                                    <option data-content="<img src='img/european-union.png' />EUR"></option>
                                </select>
                            </div>
                            <div class="col-12 col-md-4 mb-2 mb-md-0">
                                <select name="To" class="form-control form-control-lg selectpicker">
                                    <option value="@Model.rates.USD" data-content="<img src='img/united-states.png' /> USD" @if (ViewBag.Selected == "USD") { <text> selected="selected" </text> }></option>
                                    <option value="objJson.rates.GBP" data-content="<img src='img/united-kingdom.png' /> GBP" @if (ViewBag.Selected == "GBP") { <text> selected="selected" </text> }></option>
                                    <option value="CAD" data-content="<img src='img/canada.png' /> CAD" @if (ViewBag.Selected == "CAD") { <text> selected="selected" </text> }></option>
                                    <option value="AUD" data-content="<img src='img/australia.png' /> AUD" @if (ViewBag.Selected == "AUD") { <text> selected="selected" </text> }></option>
                                </select>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-12 col-md-12">
                                <span class="form-control form-control-lg bg-dark" style="color:white;background-color:darkblue;padding:1%;margin-top:1%;margin-bottom:1%;">@Model.Quantity : @ViewBag.Total </span>
                                <!--<div class="form-group">
                                    @Html.LabelFor(model => model.rates.CAD)
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.rates.CAD)
                                        @Html.ValidationMessageFor(model => model.rates.CAD)
                                    </div>
                                </div>-->

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-12 col-md-12">
                                <button type="submit" class="btn btn-block btn-lg btn-primary bg-danger">Push to convert</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <!-- Footer -->
    <footer class="footer bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 h-100 text-center text-lg-left my-auto">
                    <ul class="list-inline mb-2">
                        <li class="list-inline-item">
                            <a href="#">Terms of Use</a>
                        </li>
                        <li class="list-inline-item">&sdot;</li>
                        <li class="list-inline-item">
                            <a href="#">Privacy Policy</a>
                        </li>
                    </ul>
                    <p class="text-muted small mb-4 mb-lg-0">&copy; All Rights Reserved.</p>
                </div>
                <div class="col-lg-6 h-100 text-center text-lg-right my-auto">
                    <div>
                        Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a><br />
                        <a href='https://www.freepik.com/vectors/background'>Background vector created by starline - www.freepik.com</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
</body>

</html>